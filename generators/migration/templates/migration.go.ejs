package migration

import (
	"github.com/go-gormigrate/gormigrate/v2"
	"gorm.io/gorm"
	"<%= appModName %>/app/model"
<%- include('import') %>
)

type <%= className %> struct {
	ID             string     `gorm:"type:uuid;primaryKey;autoIncrement:false"`
	<%- include('print-props') %>
	model.BaseTimestamps
}

func Create<%= pluralClassName %>Table() *gormigrate.Migration {
	return &gormigrate.Migration{
		ID: "<%= migrationID %>",
		Migrate: func(tx *gorm.DB) error {

			if err := tx.AutoMigrate(&<%= className %>{}); err != nil {
				return err
			}

			return nil
		},

		Rollback: func(tx *gorm.DB) error {
			return tx.Migrator().DropTable("<%= tableName %>")
		},
	}
}
